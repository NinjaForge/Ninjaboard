<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade">
	<name>Ninjaboard Quickpanel</name>
	<author>NinjaForge</author>
    <creationDate>2011-01-15</creationDate>
	<copyright>(C) 2007-2010 Ninja Media Group. All rights reserved.</copyright>
	<license>GNU GPLv3</license>
	<csslicense>CC-BY</csslicense>
	<jslicense>MIT</jslicense>
	<authoremail>support@ninjaforge.com</authoremail>
    <authorurl>ninjaforge.com</authorurl>
	<version>1.1.0</version>
	<revision>2232</revision>
	<description>Shows the user avatar, a link to the user profile, email subscriptions and private messages.</description>

	<files>
	    <folder>tmpl</folder>
		<file module="mod_ninjaboard_quickpanel">mod_ninjaboard_quickpanel.php</file>
		<file>html.php</file>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_ninjaboard_quickpanel.ini</language>
	</languages>

	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX"/>
		<param name="messages" type="radio" default="1" label="Display Messages Link"
			description="Display Messages Link">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="watches" type="radio" default="1" label="Display Watches Link"
			description="Display Watches Link">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="profile" type="radio" default="1" label="Display Profile Link"
			description="Display Profile Link">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="logout" type="radio" default="1" label="Display Logout Link"
			description="Display Logout Link">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached"/>
	</params>
</install>