<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Feed Configuration</name>
	<author>Sonxisoft</author>
	<copyright>(C) 2007-2008 Ninja Media Group. All rights reserved.</copyright>
	<license></license>
	<authorEmail></authorEmail>
	<authorUrl>ninjaforge.com</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Feed Configuration</description>
	<params>
		<param name="enable_feeds" type="radio" default="1" label="NB_ENABLEFEEDS" description="NB_ENABLEFEEDSDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="feed_items_count" type="text" size="50" default="10" label="NB_FEEDITEMSCOUNT" description="NB_FEEDITEMSCOUNTDESC" />
		<param name="feed_items_type" type="list" size="50" default="0" label="NB_FEEDITEMSTYPE" description="NB_FEEDITEMSTYPEDESC">
			<option value="0">NB_TOPICS</option>
			<option value="1">NB_POSTS</option>
		</param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_desc_trunk_size" type="text" size="5" default="0" label="NB_FEEDDESCTRUNKSIZE" description="NB_FEEDDESCTRUNKSIZEDESC" />
	    <param name="feed_desc_html_syndicate" type="radio" default="0" label="NB_FEEDDESCHTMLSYNDICATE" description="NB_FEEDDESCHTMLSYNDICATEDESC">
	      <option value="1">NB_YES</option>
	      <option value="0">NB_NO</option>
	    </param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_image_title" type="text" size="50" default="Ninjaboard Logo" label="NB_FEEDIMAGETITLE" description="NB_FEEDIMAGETITLEDESC" />
	    <param name="feed_image_url" type="text" size="50" default="http://www.ninjaboard.org/images/logo.png" label="NB_FEEDIMAGEURL" description="NB_FEEDIMAGEURLDESC" />
	    <param name="feed_image_link" type="text" size="50" default="http://www.ninjaboard.org/" label="NB_FEEDIMAGELINK" description="NB_FEEDIMAGELINKDESC" />
	    <param name="feed_image_description" type="textarea" cols="30" rows="5" default="This feed is provided by ninjaboard.org. Please click to visit." label="NB_FEEDIMAGEDESCRIPTION" description="NB_FEEDIMAGEDESCRIPTIONDESC" />
	    <param name="feed_image_desc_trunk_size" type="text" size="5" default="0" label="NB_FEEDIMAGEDESCTRUNKSIZE" description="NB_FEEDIMAGEDESCTRUNKSIZEDESC" />
	    <param name="feed_image_desc_html_syndicate" type="radio" default="0" label="NB_FEEDIMAGEHTMLSYNDICATE" description="NB_FEEDIMAGEHTMLSYNDICATEDESC">
	      <option value="1">NB_YES</option>
	      <option value="0">NB_NO</option>
	    </param>
	</params>
</install>
