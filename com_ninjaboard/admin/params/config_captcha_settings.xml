	<version>1.0.0</version>
	<description>Parameters for individual Captcha Configuration</description>
	<params>
		<param name="captcha_edittopic" type="radio" default="1" label="NB_CAPTCHAEDITTOPIC" description="NB_CAPTCHAEDITTOPICDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_deletetopic" type="radio" default="1" label="NB_CAPTCHADELETETOPIC" description="NB_CAPTCHADELETETOPICDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_editpost" type="radio" default="1" label="NB_CAPTCHAEDITPOST" description="NB_CAPTCHAEDITPOSTDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_deletepost" type="radio" default="1" label="NB_CAPTCHADELETEPOST" description="NB_CAPTCHADELETEPOSTDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_login" type="radio" default="1" label="NB_CAPTCHALOGIN" description="NB_CAPTCHALOGINDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_register" type="radio" default="1" label="NB_CAPTCHAREGISTER" description="NB_CAPTCHAREGISTERDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_search" type="radio" default="1" label="NB_CAPTCHASEARCH" description="NB_CAPTCHASEARCHDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_saveprofile" type="radio" default="1" label="NB_CAPTCHASAVEPROFILE" description="NB_CAPTCHASAVEPROFILEDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="captcha_requestlogin" type="radio" default="1" label="NB_CAPTCHAREQUESTLOGIN" description="NB_CAPTCHAREQUESTLOGINDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
	</params>
</install>
