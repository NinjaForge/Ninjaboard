<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Avatar Configuration</name>
	<author>Sonxisoft</author>
	<copyright>(C) 2007-2008 Ninja Media Group. All rights reserved.</copyright>
	<license></license>
	<authorEmail></authorEmail>
	<authorUrl>ninjaforge.com</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Avatar Configuration</description>
	<params>
		<param name="enable_avatars" type="radio" default="1" label="NB_ENABLEAVATAR" description="NB_ENABLEAVATARDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="image_resize" type="radio" default="1" label="NB_IMAGERESIZE" description="NB_IMAGERESIZEDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="image_resize_quality" type="text" size="5" default="100" label="NB_IMAGERESIZEQUALITY" description="NB_IMAGERESIZEQUALITYDESC" />
		<param name="avatar_width" type="text" size="5" default="100" label="NB_AVATARWIDTH" description="NB_AVATARWIDTHDESC" />
		<param name="avatar_height" type="text" size="5" default="100" label="NB_AVATARHEIGHT" description="NB_AVATARHEIGHTDESC" />
		<param name="avatar_max_file_size" type="text" size="5" default="8192" label="NB_AVATARMAXFILESIZE" description="NB_AVATARMAXFILESIZEDESC" />
		<param name="avatar_path" type="text" size="50" default="media/ninjaboard/avatars" label="NB_AVATARPATH" description="NB_AVATARPATHDESC" />
		<param name="avatar_file_types" type="text" size="50" default="jpg,png,gif,bmp,jpeg" label="NB_AVATARFILETYPES" description="NB_AVATARFILETYPESDESC" />				
	</params>
</install>
