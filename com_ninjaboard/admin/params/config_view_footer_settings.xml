			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="show_userlist" type="radio" default="1" label="NB_SHOWUSERLIST" description="NB_SHOWUSERLISTDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
