	<description>Parameters for individual View Configuration</description>
	<params>
		<param name="show_myprofile" type="radio" default="1" label="NB_SHOWMYPROFILE" description="NB_SHOWMYPROFILEDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="show_logout" type="radio" default="1" label="NB_SHOWLOGOUT" description="NB_SHOWLOGOUTDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
		</param>
		<param name="show_login" type="radio" default="1" label="NB_SHOWLOGIN" description="NB_SHOWLOGINDESC">
			<option value="1">NB_YES</option>
			<option value="0">NB_NO</option>
