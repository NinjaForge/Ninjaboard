<?xml version="1.0" encoding="UTF-8"?>
<install type="component" version="1.5.0" method="upgrade">
	<name>Ninjaboard</name>
	<author>NinjaForge Team</author>
    <creationDate>2009-02-21</creationDate>
	<copyright>(C) 2007-2009 Ninja Media Group. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authoremail>support@ninjaforge.com</authoremail>
    <authorurl>http://ninjaforge.com</authorurl>
	<version>0.5.4.1</version>
	<description>Ninjaboard - Joomla! Bulletin Board</description>
	
	<install>
		<sql>
			<file charset="utf8" driver="mysql" folder="">install/install.sql</file>
		</sql>
	</install>
	
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql" folder="">install/uninstall.sql</file>
		</sql>
	</uninstall>

	<files folder="site">
		<folder>attachments</folder>
		<folder>views</folder>
		<folder>designs</folder>
		<folder>controller</folder>
		<folder>system</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>tables</folder>
		<filename>ninjaboard.php</filename>
		<filename>router.php</filename>
	</files>	
	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_ninjaboard.ini</language>
		<language tag="de-DE">de-DE/de-DE.com_ninjaboard.ini</language>
	</languages>
	<media folder="admin/images/ninjaboard/avatars" destination="ninjaboard/avatars">
		<filename>_ninjaboard.noavatar.png</filename>
	</media>
	
<administration>
		<menu img="components/com_ninjaboard/images/menu/icon-16-default.png">Ninjaboard</menu>
		<submenu>
            <!-- Note that all & must be escaped to &amp; for the file to be valid XML and be parsed by the installer -->
            <menu task="view" controller="dashboard" img="components/com_ninjaboard/images/menu/icon-16-config.png">Dashboard</menu>
            <menu task="ninjaboard_forum_view" img="components/com_ninjaboard/images/menu/icon-16-forum.png">Board</menu>
            <menu task="ninjaboard_config_view" img="components/com_ninjaboard/images/menu/icon-16-ninjaboardtools.png">Configuration</menu>
            <menu task="ninjaboard_design_view" img="components/com_ninjaboard/images/menu/icon-16-style.png">Designs</menu>
            <menu task="ninjaboard_user_view" img="components/com_ninjaboard/images/menu/icon-16-profilefield.png">Users</menu>
            <menu task="ninjaboard_profilefield_view" img="components/com_ninjaboard/images/menu/icon-16-ninjaboarduser.png">Profile Fields</menu>
            <menu task="ninjaboard_usersync_view" img="components/com_ninjaboard/images/menu/icon-16-usersync.png">Tools</menu>
        </submenu>
		<files folder="admin">
			<folder>elements</folder>
			<folder>tables</folder>			
			<folder>controllers</folder>
			<folder>css</folder>
			<folder>js</folder>			
			<folder>helpers</folder>
			<folder>views</folder>
			<folder>params</folder>
			<folder>images</folder>
			<folder>install</folder>
			<folder>models</folder>
			<filename>license.php</filename>
			<filename>copyright.php</filename>
			<filename>toolbar.ninjaboard.html.php</filename>
			<filename>admin.ninjaboard.php</filename>
			<filename>toolbar.ninjaboard.php</filename>
			<filename>changelog.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_ninjaboard.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_ninjaboard.menu.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_ninjaboard.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_ninjaboard.menu.ini</language>
		</languages>
	</administration>
	
	<installfile folder="">install/install.php</installfile>
	<uninstallfile folder="">install/uninstall.php</uninstallfile>
	
</install>
