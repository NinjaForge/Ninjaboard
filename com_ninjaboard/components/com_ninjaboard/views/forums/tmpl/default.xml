<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE metadata>
<!-- $Id: default.xml 1422 2011-01-14 14:26:35Z stian $ -->
<metadata>
	<layout title="Forums">
		<message>Renders top level forums in a list.</message>
	</layout>
	
	<!-- @group j!1.5 -->
	<state>
		<name>Forums</name>
		<description>Renders top level forums in a list.</description>
		<params>
			<param name="deleteme" type="napi" ninja="void" />
			<param name="ninjaboard_setting_id" type="getlist" get="admin::com.ninjaboard.model.settings" label="Setting" description="Choose a predefined setting from the Ninjaboard Settings.">
				<option>- Use default -</option>
			</param>
			
			<param name="sort" type="genericlist" label="Forums order" description="Choose how your forums are sorted." default="path_sort_ordering">
				<option value="path_sort">- Use default -</option>
				<option value="path_sort_title">Sort by title</option>
				<option value="path_sort_ordering">Sort by custom ordering</option>
			</param>
		</params>
	</state>
	<!-- @end -->
	
	<!-- @group j!1.6 -->
	<fields name="params" addfieldpath="/administrator/components/com_ninja/overrides">
		<fieldset name="basic" label="Basic Options">
				<field name="deleteme" type="napi" ninja="void" />
		</fieldset>
	</fields>
	<!-- @end -->
</metadata>