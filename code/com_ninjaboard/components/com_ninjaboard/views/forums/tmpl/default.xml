<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE metadata>
<metadata>
	<layout title="Forums">
		<message>Renders top level forums in a list.</message>
	</layout>
	
	<!-- @group j!1.5 -->
	<state>
		<name>Forums</name>
		<description>Renders top level forums in a list.</description>
		<params>
			<param name="deleteme" type="napi" xml="/components/com_ninjaboard/views/forums/tmpl/default.xml" />
		</params>
	</state>
	<!-- @end -->
	
	<!-- @group j!1.6 -->
	<fields name="params" addfieldpath="/administrator/components/com_ninja/overrides">
		<fieldset name="basic" label="Basic Options">
				<field name="deleteme" type="napi" xml="/components/com_ninjaboard/views/forums/tmpl/default.xml" />
		</fieldset>
	</fields>
	<!-- @end -->

	<!-- @group Actual form -->
	<form>
		<params group="basic">
			<param name="ninjaboard_setting_id" type="getlist" get="com://admin/ninjaboard.model.settings" label="Setting" description="Choose a predefined setting from the Ninjaboard Settings.">
				<option>- Use default -</option>
			</param>
		</params>
	</form>
	<!-- @end -->
</metadata>