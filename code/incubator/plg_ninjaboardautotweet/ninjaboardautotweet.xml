<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="ninjaboard">
	<name>NinjaBoard Auto Tweet for Twitter</name>
	<author>Stephanie Schmidt</author>
	<creationDate>20 February 2010</creationDate>
	<copyright>(C) 2007-2012 NinjaForge. All rights reserved.</copyright>
	<license>http://www.dwtutorials.com</license>
	<authorEmail>admin[at]dwtutorials.com</authorEmail>
	<authorUrl>www.dwtutorials.com</authorUrl>
	<version>1.0.0</version>
	<isapplication>true</isapplication>
	<isbrowseable>true</isbrowseable>
	<description>Submit your posts to twitter automatically</description>
	<files>
		<filename plugin="ninjaboardautotweet">ninjaboardautotweet.php</filename>
	</files>
	<params>
		<param name="username" type="text" default="" label="Twitter Username" description="Twitter Username"></param>
		<param name="password" type="password" default="" label="Twitter Password" description="Twitter Password"></param>
	<param type="spacer"/>
		<param name="forums" type="text" default="" label="Forums" description="Specify the Forums to include"/>
		<param name="topics" type="text" default="" label="Topics" description="Specify the Topics to include"/>
		<param name="not_forums" type="text" default="" label="Not Forums" description="Specify the Forums not to include"/>
		<param name="not_topics" type="text" default="" label="Not Topics" description="Specify the Topics not to include"/>
	<param type="spacer" />
		
	</params>
</install>